<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba=" 1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba=" 1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba=" 0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
 
    <link name="base_link">

    </link>

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.089 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0 0 0.0381"/>
            <geometry>
                <box size="0.178 0.127 0.0762"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.0381"/>
            <geometry>
                <box size="0.178 0.127 0.0762"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.68" x="0.178" y="0.127" z="0.0762">
            <origin xyz="0 0 0.0381" rpy="0 0 0"/>
        </xacro:inertial_box>
        
    </link>

    <joint name="Left_Front_Wheel_Joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_front_wheel"/>
        <origin xyz=" 0 .0635 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>
    
    <link name="left_front_wheel">
        <visual>
            <origin xyz="0 0 0.0381"/>
            <geometry>
                <cylinder radius="0.025" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.0381"/>
            <geometry>
                <cylinder radius="0.025" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius=".025">
            <origin xyz="0 0 0.0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="Right_Front_Wheel_Joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_front_wheel"/>
        <origin xyz=" 0 -0.127 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>
    
    <link name="right_front_wheel">
        <visual>
            <origin xyz="0 0 0.0381"/>
            <geometry>
                <cylinder radius="0.025" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.0381"/>
            <geometry>
                <cylinder radius="0.025" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius=".025">
            <origin xyz="0 0 0.0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="Left_back_Wheel_Joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_back_wheel"/>
        <origin xyz="-0.128 .0635 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>
    
    <link name="left_back_wheel">
        <visual>
            <origin xyz="0 0 0.0381"/>
            <geometry>
                <cylinder radius="0.025" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.0381"/>
            <geometry>
                <cylinder radius="0.025" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius=".025">
            <origin xyz="0 0 0.0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="Right_back_Wheel_Joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_back_wheel"/>
        <origin xyz=" -0.128 -0.127 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>
    
    <link name="right_back_wheel">
        <visual>
            <origin xyz="0 0 0.0381"/>
            <geometry>
                <cylinder radius="0.025" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.0381"/>
            <geometry>
                <cylinder radius="0.025" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius=".025">
            <origin xyz="0 0 0.0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

</robot>